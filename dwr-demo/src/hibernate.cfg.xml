<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<!-- Generated by MyEclipse Hibernate Tools. -->
<hibernate-configuration>
	<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location" value="classpath:jdbc.properties" />
	</bean>

	<session-factory>
		<property name="dialect" >org.hibernate.dialect.MySQLDialect</property>
		<property name="connection.url">${orm.mysql.jdbc.url}</property>
		<property name="connection.username">${orm.mysql.jdbc.username}</property>
		<property name="connection.password">${orm.mysql.jdbc.password}</property>
		<property name="connection.driver_class">${orm.mysql.jdbc.driverClassName}</property>
		<!-- <property name="myeclipse.connection.profile">hibernate</property> -->
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>
		<mapping resource="com/entity/Accpusers.hbm.xml" />
		<mapping resource="com/entity/Citys.hbm.xml" />
		<mapping resource="com/entity/Provinces.hbm.xml" />
	</session-factory>

</hibernate-configuration>